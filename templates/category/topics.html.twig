{% extends 'base.html.twig' %}

{% block title %}{{ topic }}{% endblock %}

{% block body %}
    <h1>{{ topic }}</h1>

    
        <table>
            <thead>
                <tr>
                    <th>Message</th>
                    <th>Auteur</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for post in topic.posts %}
                    <tr>
                        <td>{{post}}</td>
                        <td>{{ post.user }}</td>
                        <td>
                            <a href="{{ path('delete_post', {'id': post.id}) }}"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    
{% endblock %}